<div class="container mt-5">
  <div class="card beverage-card">
    <div class="card-header text-center">
      <h2>{{beverage.name}}</h2>
    </div>
    <div class="card-body d-flex">
      <!-- Image place holder here -->
      <div class="beverage-image-container" style="width: 33%;"> 
        <img src="{{beverage.imageUrl}}" alt="{{beverage.name}}" class="img-fluid">
      </div>
      <!-- Beverage details -->
      <div class="beverage-details" style="width: 67%; padding-left: 20px;">
        <h4>Description:</h4>
        <p>{{beverage.description}}</p>
        <h4>Ingredients:</h4>
        <ul>
          {{#each beverage.ingredients}}
            <li>{{this.name}}</li>
          {{/each}}
        </ul>
        <a href="/api/reviews/beverage/{{beverage.id}}" class="btn btn-secondary mt-3">See Reviews</a>
        <button class="btn btn-primary mt-3" id="oneClickBuy">One Click Buy</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('oneClickBuy').addEventListener('click', function() {
    alert('We need this feature to meet the MVP, get cracking!');
  });
</script>
