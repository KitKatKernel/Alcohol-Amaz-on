
  <h1>Your Projects</h1>
  <ul>
    {{!-- Loop through each project and display its name and description with a delete button --}}
    {{#each beverages}}
      <li>
        {{this.name}} - {{this.description}}
        <form action="/api/projects/{{this.id}}" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit">Delete</button>
        </form>
      </li>
    {{/each}}
  </ul>

  <h2>Create a Recipe</h2>
  <form action="/api/beverageroutes" method="POST">
    <input type="text" name="beverage_name" placeholder="Beverage Name" required>
    <input type="text" name="description" placeholder="Description" required>
    <select id="ingredientDrop" multiple>
      <option>Select Ingredient</option>
    </select>
    <button type="submit">Create</button>
  </form>
  <form action="/api/users/logout" method="POST">
    <button type="submit">Logout</button>
  </form>



<script src="../public/js/add-beverage.js"></script>