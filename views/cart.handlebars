<div class="container mt-5">
  <h2>Your Cart</h2>
  {{#if cart.length}}
    <ul class="list-group">
      {{#each cart}}
        <li class="list-group-item">
          <h4>{{this.name}}</h4>
          <p>{{this.description}}</p>
          <p><strong>Ingredients:</strong> {{this.ingredientsList}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>Your cart is empty.</p>
  {{/if}}
  <a href="/" class="btn btn-primary mt-3">Continue Shopping</a>
</div>
