{{#extends 'main'}}

{{#content 'body'}}
  <h1>Your Projects</h1>
  <ul>
    {{!-- Loop through each project and display its name and description with a delete button --}}
    {{#each projects}}
      <li>
        {{this.name}} - {{this.description}}
        <form action="/api/projects/{{this.id}}" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit">Delete</button>
        </form>
      </li>
    {{/each}}
  </ul>

  <h2>Create a New Project</h2>
  <form action="/api/projects" method="POST">
    <input type="text" name="name" placeholder="Project Name" required>
    <input type="text" name="description" placeholder="Description" required>
    <input type="number" name="needed_funding" placeholder="Needed Funding" required>
    <button type="submit">Create</button>
  </form>
  <form action="/api/users/logout" method="POST">
    <button type="submit">Logout</button>
  </form>
{{/content}}
